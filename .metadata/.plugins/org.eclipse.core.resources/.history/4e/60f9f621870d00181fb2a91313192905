<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	<!-- namespace的值一定是接口的全路径与接口绑定后,此文件相当于接口的实现类  -->
<mapper namespace="com.gqw.dao.LoginMapper">
<select id="login"  resultType="com.gqw.bean.User" parameterType="string">
	select * from login where username=#{username} and password=#{password} 
	<if test="pwd!=null">
		and seondpassword=#{pwd}
	</if>
	<if test="thirdpwd!=null">
		and thirdpassword=#{thirdpwd}
	</if>
</select>
<insert id="insertOrder" parameterType="com.gqw.bean.User" >
	insert into login(username,password,identity,seondpassword,thirdpassword,rengounumber,tuijianrennumber,baodancenternumber,truename,phonenumber,shenfenzhengnumber,adress,bankmessage,bankzhihang,bankfenlichu,kaihuname,banknumber)
	values(#{username},#{password},#{password},#{seondpassword},#{thirdpassword},#{rengounumber},#{tuijianrennumber},#{tuijianrennumber},#{truename},#{phonenumber},#{shenfenzhengnumber},#{adress},#{bankmessage},#{bankzhihang},#{bankfenlichu},#{kaihuname},#{banknumber});
</insert>
<select id="personalMessage" parameterType="int" resultType="User">
	select * from login where id=#{id}
</select>
</mapper>

